<Window x:Class="RoutedEvent_Example.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RoutedEvent_Example"
        mc:Ignorable="d"
        ButtonBase.Click  = "Window_Click"
        MouseDown="WindowMouseDown"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin = "20" ButtonBase.Click = "StackPanel_Click">

            <StackPanel Margin = "10">
                <TextBlock Name = "txt1" FontSize = "18" Margin = "5" Text = "Erster Text" />
                <TextBlock Name = "txt2" FontSize = "18" Margin = "5" Text = "Zweiter Text" />
                <TextBlock Name = "txt3" FontSize = "18" Margin = "5" Text = "Dritter Text" />
            </StackPanel>

            <Button Margin = "10" Content = "Click me" Click = "Button_Click" Width = "80"/>
            <Button Content="Button"/>
        </StackPanel>
    </Grid>
</Window>
